@model IEnumerable<DreamHomeApp.Entites.Apartament>

@{
    ViewData["Title"] = "All";
}

<h1>All</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountBath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Closet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wardrobe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.House.Adress)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Image)" alt="Image" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountBath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Closet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wardrobe)
            </td>
            
        </tr>
}
    </tbody>
</table>
